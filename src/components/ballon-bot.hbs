<div class="dialog">
	<div class="avatar left">
		<i class="material-icons {{iconColor}}">{{icon}}</i>
	</div>
	{{#if text}}
	{{text}}
	{{/if}}
	<div class="balloon bot purple lighten-4">
		<div id='spinner' class='spinner'>
			<div class='bounce1'></div>
			<div class='bounce2'></div>
			<div class='bounce3'></div>
		</div>
	</div>
	{{#if debug}}
	<div class='debug-button'>
		<i class='material-icons debug-icon'>info</i>
	</div>
	{{/if}}
</div>